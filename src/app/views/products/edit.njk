{% extends "../layout.njk" %}

{% block content %}
    <section class="container form">
        <form method="POST" action="/products?_method=PUT" enctype="multipart/form-data">

            <div class="header">
                <h3>Você está editando:
                    {{product.name}}</h3>
            </div>

            <div class="fields">
                {%include 'products/fields.njk'%}
                <input type="hidden" name="id" value="{{product.id}}">
            </div>

            <button type="submit" class="button edit">Atualizar</button>
        </form>

        <form id="form-delete" method="POST" action="/products?_method=DELETE">
            <input type="hidden" name="id" value="{{product.id}}">
            <button class="button delete" type="submit">Deletar</button>
        </form>
    </section>

    <script>
        const formDelete = document.querySelector("#form-delete")
        formDelete.addEventListener("submit", function (event) {
            const confirmation = confirm("Você quer mesmo DELETAR esse produto?")
            if (!confirmation) {
                event.preventDefault()
            }
        })
    </script>
{% endblock content %}