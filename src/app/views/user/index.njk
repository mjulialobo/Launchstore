{% extends "../layout.njk" %}

{% block content %}
    <section class="user-dashboard container form">
        <form method="POST" action="/users?_method=PUT">

            <div class="header">
                <h3>Informações do Usuário</h3>
            </div>

            <div class="fields">
                {%include 'user/fields.njk'%}
                <input type="hidden" name="id" value="{{user.id}}">
            </div>

            <button type="submit" class="button edit">Atualizar</button>
        </form>

        <form id="form-delete" method="POST" action="/users?_method=DELETE">
            <input type="hidden" name="id" value="{{user.id}}">
            <button class="button delete" type="submit">Deletar</button>
        </form>
    </section>
    <script>
        const formDelete = document.querySelector("#form-delete")
        formDelete.addEventListener("submit", function (event) {
            const confirmation = confirm("Você quer mesmo DELETAR sua conta? Essa operação não poderá ser desfeita")
            if (!confirmation) {
                event.preventDefault()
            }
        })
    </script>
{% endblock content %}